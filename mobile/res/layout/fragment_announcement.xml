<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="@dimen/padding_small"
    android:background="@color/post_background"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
     >

    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@+id/megaphone"
        android:textSize="@dimen/text_small"
        android:text="Sunday 15:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/announcement_date"
        android:layout_below="@+id/announcement_date"
        android:text="Midterms will cover lectures from 1 to 4 and sheets from 1 to 3 rabna yatalawako ya 7abaybe."
        android:textColor="@color/announcement_title"
        android:textSize="@dimen/normal"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/megaphone"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/announcement_title"
        android:src="@drawable/megaphone" />

    <ImageView
        android:id="@+id/announcer_avatar"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/announcement_title"
        android:layout_alignTop="@+id/announcement_date"
        android:src="@drawable/avatar" />
    
    <View
        android:id="@+id/hr"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_medium"
      	android:layout_alignLeft="@id/megaphone"
      	android:layout_below="@id/announcement_title"
        android:background="@color/hr" />
    
</RelativeLayout>
